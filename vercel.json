{
    "rewrites": [
      {
        "source": "/horizon/(.*)",
        "destination": "/$1"
      },
      {
        "source": "/(.*)",
        "destination": "/index.html"
      }
    ],
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "dist" }
      }
    ]
  }